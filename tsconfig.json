{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"], // hm what's with the dom

    "jsx": "react",    
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // "strictNullChecks": true, // occastionally turn on to improve code quality....

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noUnusedLocals": true,
    // "noUnusedLocals": true, // cannot use because ANTLR generated files have this problem
    // "preserveConstEnums": true,
    
    "experimentalDecorators": true,
    "composite": true
  },
 "include":[
    "src/**/*",
  ]
}